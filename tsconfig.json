{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext",
            "ES6",
            "ScriptHost",
        ],
        "module": "commonjs",
        "noEmit": false,
        "noImplicitAny": true,
        "outDir": "dist",
        "removeComments": true,
        "rootDir": "./src",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES6",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "types": [
            "react",
            "jest",
            "@testing-library/jest-dom",
            "node"
        ]
    },
    "include": [
        ".eslintrc.js",
        "**/*.js",
        "**/*.jsx",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.test.ts",
        "src/**/*.test.tsx"
    ]
}
